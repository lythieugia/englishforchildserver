@model LuanVan.Web.Models.ViewModel.EditGroupViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Group", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Group</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            <label for="Image">Image</label>
        </div>
        <div class="editor-field">
             <a href="@Model.ImageUrl" target="_blank"><img src="@Model.ImageUrl" style="max-width: 100px;"/></a
        </div>

        <div>
            <label for="file">Upload Image:</label>
            <input type="file" name="ImageFile" id="file" /> 
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Group List", "Details", "Lesson", new { Id = Model.LessonId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
