<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Group</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
