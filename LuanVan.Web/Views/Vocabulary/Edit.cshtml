@model LuanVan.Web.Models.ViewModel.EditVocabularyViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Vocabulary", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Vocabulary</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Word)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Word)
            @Html.ValidationMessageFor(model => model.Word)
        </div>

        <div>
            <img src="@Model.ImageUrl" style="max-width: 100px;"/>
        </div>

        <div>
            <label for="file">Upload Image:</label>
            <input type="file" name="ImageFile" id="file" /> 
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Vocabulary List", "Details", "Group", new { Id = Model.GroupId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
